{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./typings",
      "./src"
    ],
    "paths": {
      "~/*": ["./src/*"]
    },
    "types" : [
      "node"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.mock.ts",
    "tests/**/*",
    "src/**/*.spec.ts"
  ]
}
